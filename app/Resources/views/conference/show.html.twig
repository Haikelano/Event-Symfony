{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conference</h1>

    <table>
        <tbody>
            <tr>
                <th>Idconference</th>
                <td>{{ conference.idconference }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ conference.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ conference.text }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ conference.job }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ conference.company }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ conference.context }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if conference.startdate %}{{ conference.startdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finishdate</th>
                <td>{% if conference.finishdate %}{{ conference.finishdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conference.description }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ conference.resume }}</td>
            </tr>
            <tr>
                <th>Topics</th>
                <td>{{ conference.topics }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conference_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conference_edit', { 'id': conference.idconference }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
