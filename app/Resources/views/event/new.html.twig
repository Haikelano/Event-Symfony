{% extends 'base_dashboard.html.twig' %}
 {% block title %} Event creation{%endblock%}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Event</h4>

                {{ form_start(form ,{'attr':{'enctype':'multipart/form-data','method':'POST','class':'form-horizontal form-label-left myform'}}) }}

                <div class="form-group">
                    {{form_label(form.nameevent,"Name *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.nameevent, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.title,"Title *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.description,"Description *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.lieu,"Lieu *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.lieu, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.dateperiode,"Date Periode *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.dateperiode, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.startdate,"Start Date *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.startdate, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.enddate,"End Date *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.enddate, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.mapsevent,"Event maps *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.mapsevent, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.idcountry,"Country *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.idcountry, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                {{   form_widget(form._token) }}
                <div class="col-md-12">
                    <input type="submit" value="Create"  class="btn btn-primary pull-right" />
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>


{% endblock %}
