{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event</h1>

    <table>
        <tbody>
            <tr>
                <th>Idevent</th>
                <td>{{ event.idevent }}</td>
            </tr>
            <tr>
                <th>Nameevent</th>
                <td>{{ event.nameevent }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Dateperiode</th>
                <td>{{ event.dateperiode }}</td>
            </tr>
            <tr>
                <th>Idimagep</th>
                <td>{{ event.idimagep }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if event.startdate %}{{ event.startdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if event.enddate %}{{ event.enddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mapsevent</th>
                <td>{{ event.mapsevent }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.idevent }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
