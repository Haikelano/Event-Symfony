{% extends 'base_dashboard.html.twig' %}
{% block title %}   Actuality Images list{%endblock%}
{% block body %}


<center>
    <div class="col-md-10">
        <div class="card card-user">
            <div class="card-body">
                <div class="author">
                    <a href="#">
                        <img class="rounded" src="{{ eventGallery.pathimage }}">
                        <h5 class="title">{{ eventGallery.idEvent.nameevent }} : {{ eventGallery.name }}</h5>
                    </a>
                    <p class="description text-center">
                        {{ eventGallery.location }}
                    </p>

                </div>
                <p class="description text-info">

                    {{ eventGallery.description }}<br>
                    Principal image : {% if eventGallery.iamgePrincipal %}Yes{% else %}No{% endif %}<br>
                </p>
            </div>
            <div class="card-footer">
                <center>
                    <a href="{{ path('eventgallery_edit', { 'id': eventGallery.ideventGallery }) }} "class="btn-width btn btn-sm btn-primary "><i class="fa fa-edit"></i> Edit</a>
                    <a href="{{ path('eventgallery_delete', { 'id': eventGallery.ideventGallery }) }}" data-confirm="are you sure you want to delete this?" class="btn-width btn btn-sm btn-danger deleteBtn"><i class="fa fa-times"></i> Delete</a>
                </center>
            </div>
        </div>
    </div>
</center>

{% endblock %}
