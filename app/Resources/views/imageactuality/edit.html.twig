{% extends 'base_dashboard.html.twig' %}
{% block title %} Actuality Image Edit{%endblock%}
{% block body %}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Actuality Image edit</h4>
    {{ form_start(form, {'attr':{'enctype':'multipart/form-data','method':'POST','class':'form-horizontal form-label-left myform'}}) }}
    <div class="form-group">
        {{form_label(form.name,"Name *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
        <div class="col-md-9 col-sm-9 col-xs-12">
            {{ form_widget(form.name, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{form_label(form.link,"Link *",{'label_attr': {'style':'display: none;','class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
        <div class="col-md-9 col-sm-9 col-xs-12">
            {{ form_widget(form.link, {'attr': {'style':'display: none;','class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{form_label(form.idactuality,"Actuality *",{'label_attr': {'style':'display: none;','class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
        <div class="col-md-9 col-sm-9 col-xs-12">
            {{ form_widget(form.idactuality, {'attr': {'style':'display: none;','class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12">
            {{ form_widget(form.imagePrincipal, {'attr': {'class': 'form-control form-check-input col-md-11 col-xs-12','required':'required'}}) }}
        </div>
        {{form_label(form.imagePrincipal,"Principal Image *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}

    </div>

    <!-- Field Hidden -->

    {{ form_widget(form._token) }}
    <div class="col-md-12">
        <input type="submit" value="Edit" class="btn btn-primary pull-right"/>
    </div>
    {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
