{% extends 'base_dashboard.html.twig' %}
{% block title %}Country Images list {% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <a class="btn btn-primary pull-right" href="{{path('imagecountry_new')}} ">Add new Image</a>
            <div class="card-header">
                <div class="card-header">
                    <h4 class="card-title"> Countries Images</h4>
                    {% for flashMessage in app.session.flashbag.get('flashSuccess') %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <span><b>Succes !</b> {{flashMessage}}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body">
                    {%if imageCountries  is empty %}
                    Aucun résultat est trouvé !
                    {%else%}
                    <div class="table-responsive">

                        <table  class="table" id="tab">
                            <thead>
                            <tr>

                <th>Name</th>
                <th>Image</th>
                <th>Principal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imageCountry in imageCountries %}
            <tr>
                <td>{{ imageCountry.idcountry.name }} : {{ imageCountry.name }}</td>
                <td><a href="{{ imageCountry.link }}"><img  class="rounded" style="max-width: 100px; max-height: 100px;" src="{{ imageCountry.link }}"/></a></td>
                <td>{% if imageCountry.imagePrincipal %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('imagecountry_edit', { 'id': imageCountry.idimageCountry }) }}"class="btn-width btn btn-sm btn-primary "><i class="fa fa-edit"></i> Edit</a>
                    <a href="{{ path('imagecountry_delete', { 'id': imageCountry.idimageCountry }) }}" data-confirm="are you sure you want to delete this?" class="btn-width btn btn-sm btn-danger deleteBtn"><i class="fa fa-times"></i> Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                        </table>
                    </div>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}
