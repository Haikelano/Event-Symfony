{% extends 'base.html.twig' %}

{% block body %}
    <h1>ImageHotel</h1>

    <table>
        <tbody>
            <tr>
                <th>Idimagehotel</th>
                <td>{{ imageHotel.idimageHotel }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ imageHotel.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ imageHotel.link }}</td>
            </tr>
            <tr>
                <th>Imageprincipal</th>
                <td>{% if imageHotel.imagePrincipal %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagehotel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imagehotel_edit', { 'id': imageHotel.idimageHotel }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
