{% extends 'base_dashboard.html.twig' %}
{% block title %}Speaker Images list {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <a class="btn btn-primary pull-right" href="{{path('imagespeaker_new')}} ">Add new Image</a>
                <div class="card-header">
                    <div class="card-header">
                        <h4 class="card-title"> Speaker Images</h4>
                        {% for flashMessage in app.session.flashbag.get('flashSuccess') %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-info">
                                        <span><b>Succes !</b> {{flashMessage}}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="card-body">
                        {%if imageSpeakers  is empty %}
                            Aucun résultat est trouvé !
                        {%else%}
                            <div class="table-responsive">

                                <table  class="table" id="tab">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>Imageprincipal</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for imageSpeaker in imageSpeakers %}
                                        <tr>
                                            <td>{{ imageSpeaker.idspeaker.name }} : {{ imageSpeaker.name }}</td>
                                            <td><a href="{{ imageSpeaker.link }}"><img  class="rounded" style="max-width: 100px; max-height: 100px;" src="{{ imageSpeaker.link }}"/></a></td>
                                            <td>{% if imageSpeaker.imagePrincipal %}Yes{% else %}No{% endif %}</td>
                                            <td>
                                                <a href="{{ path('imagespeaker_edit', { 'id': imageSpeaker.idimageSpeaker }) }}"class="btn-width btn btn-sm btn-primary "><i class="fa fa-edit"></i> Edit</a>
                                                <a href="{{ path('imagespeaker_delete', { 'id': imageSpeaker.idimageSpeaker }) }}" data-confirm="are you sure you want to delete this?" class="btn-width btn btn-sm btn-danger deleteBtn"><i class="fa fa-times"></i> Delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
