{% extends 'base.html.twig' %}

{% block body %}
    <h1>Participant</h1>

    <table>
        <tbody>
            <tr>
                <th>Idparticipant</th>
                <td>{{ participant.idparticipant }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ participant.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ participant.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ participant.phone }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ participant.adress }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ participant.zipcode }}</td>
            </tr>
            <tr>
                <th>Lastconnexiondate</th>
                <td>{% if participant.lastconnexiondate %}{{ participant.lastconnexiondate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('participant_edit', { 'id': participant.idparticipant }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
