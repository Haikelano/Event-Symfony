{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planning list</h1>

    <table>
        <thead>
            <tr>
                <th>Idplanning</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td><a href="{{ path('planning_show', { 'id': planning.idplanning }) }}">{{ planning.idplanning }}</a></td>
                <td>{{ planning.name }}</td>
                <td>{{ planning.description }}</td>
                <td>{% if planning.date %}{{ planning.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('planning_show', { 'id': planning.idplanning }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('planning_edit', { 'id': planning.idplanning }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planning_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
