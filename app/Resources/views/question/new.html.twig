{% extends 'base_dashboard.html.twig' %}
 {% block title %} Event Image creation{%endblock%}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add New Question</h4>
                {{ form_start(form,{'attr':{'enctype':'multipart/form-data','method':'POST','class':'form-horizontal form-label-left myform'}}) }}
                <div class="form-group">
                    {{form_label(form.textQuestion,"Text question *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.textQuestion, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.status,"Status *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.status, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.textResponse,"Text response *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.textResponse, {'attr': {'class': 'form-control col-md-11 col-xs-12'}}) }}
                    </div>
                </div>


                {{ form_widget(form._token) }}
                <div class="col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary pull-right"/>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
{% endblock %}
