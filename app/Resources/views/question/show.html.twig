{% extends 'base.html.twig' %}

{% block body %}
    <h1>Question</h1>

    <table>
        <tbody>
            <tr>
                <th>Idquestion</th>
                <td>{{ question.idquestion }}</td>
            </tr>
            <tr>
                <th>Textquestion</th>
                <td>{{ question.textQuestion }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if question.createdate %}{{ question.createdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ question.status }}</td>
            </tr>
            <tr>
                <th>Textresponse</th>
                <td>{{ question.textResponse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('question_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('question_edit', { 'id': question.idquestion }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
