
{% extends 'base_dashboard.html.twig' %}
 {% block title %} Event Slide Creation{%endblock%}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Add New Slide</h4>
                    {{ form_start(form,{'attr':{'enctype':'multipart/form-data','method':'POST','class':'form-horizontal form-label-left myform'}}) }}
                    <div class="form-group">
                        {{form_label(form.name,"Name *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.type,"Type *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.type, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.title,"Title *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.link,"Link *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.link, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.isenable,"Enabled *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.isenable, {'attr': {'class': 'form-control col-md-11 col-xs-12'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.idEvent,"Event *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_widget(form.idEvent, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                        </div>
                    </div>

                    {{ form_widget(form._token) }}
                    <div class="col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary pull-right"/>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
