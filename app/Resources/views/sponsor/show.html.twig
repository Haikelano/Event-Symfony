{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sponsor</h1>

    <table>
        <tbody>
            <tr>
                <th>Idsponsor</th>
                <td>{{ sponsor.idsponsor }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sponsor.name }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ sponsor.website }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ sponsor.type }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ sponsor.contact }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sponsor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sponsor_edit', { 'id': sponsor.idsponsor }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
