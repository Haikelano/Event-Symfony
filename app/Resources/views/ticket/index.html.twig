{% extends 'base_dashboard.html.twig' %}
{% block title %}Events Tickets list {% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <a class="btn btn-primary pull-right" href="{{path('ticket_new')}} ">Add new ticket</a>
            <div class="card-header">
                <div class="card-header">
                    <h4 class="card-title"> Tickets</h4>
                    {% for flashMessage in app.session.flashbag.get('flashSuccess') %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <span><b>Succes !</b> {{flashMessage}}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body">
                    {%if tickets is empty %}
                    Aucun résultat est trouvé !
                    {%else%}
                    <div class="table-responsive">

                        <table  class="table" id="tab">
                            <thead>
            <tr>
                <th>Nameoffer</th>
                <th>Price</th>
                <th>Descriptionoffer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.idEvent.nameevent }} : {{ ticket.nameoffer }}</td>
                <td>{{ ticket.price }}</td>
                <td>{{ ticket.descriptionoffer }}</td>
                <td>
                    <a href="{{ path('ticket_edit', { 'id': ticket.idticket }) }} "class="btn-width btn btn-sm btn-primary "><i class="fa fa-edit"></i> Edit</a>
                    <a href="{{ path('ticket_delete', { 'id': ticket.idticket }) }}" data-confirm="are you sure you want to delete this?" class="btn-width btn btn-sm btn-danger deleteBtn"><i class="fa fa-times"></i> Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                        </table>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}