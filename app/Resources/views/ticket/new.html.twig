
{% extends 'base_dashboard.html.twig' %}
 {% block title %} Sponsor Creation{%endblock%}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add New Sponsor</h4>
                {{ form_start(form,{'attr':{'enctype':'multipart/form-data','method':'POST','class':'form-horizontal form-label-left myform'}}) }}
                <div class="form-group">
                    {{form_label(form.nameoffer,"Name *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.nameoffer, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.price,"Price *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.descriptionoffer,"Description *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.descriptionoffer, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.idEvent,"Event *",{'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}})}}
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_widget(form.idEvent, {'attr': {'class': 'form-control col-md-11 col-xs-12','required':'required'}}) }}
                    </div>
                </div>

                {{ form_widget(form._token) }}
                <div class="col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary pull-right"/>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
{% endblock %}
