{% extends 'base.html.twig' %}

{% block body %}
    <h1>Topics</h1>

    <table>
        <tbody>
            <tr>
                <th>Topicsid</th>
                <td>{{ topic.topicsid }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Shortdescription</th>
                <td>{{ topic.shortdescription }}</td>
            </tr>
            <tr>
                <th>Longdescription</th>
                <td>{{ topic.longdescription }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topics_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('topics_edit', { 'id': topic.topicsid }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
